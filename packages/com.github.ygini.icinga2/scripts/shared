#!/bin/bash

if [ "$#" -ne 1 ]; then
    echo "Illegal number of parameters"
    exit 999
fi

BASE_FOLDER=$(dirname $(dirname "$BASH_SOURCE"))

TARGET_PATH="$1"
TMP_PATH="$TARGET_PATH/tmp"
ARCHIVE="$TMP_PATH/archive.tar.XX"
ICINGA_SRC_FOLDER="$TARGET_PATH/icinga2_src"
ICINGA_INSTALL_FOLDER="$TARGET_PATH/icinga2"

USER=com.github.ygini.icinga2
GROUP=com.github.ygini.icinga2

CMAKE_PATH=/opt/local/bin/cmake

